<p id="notice"><%= notice %></p>

<h1>Employee Details</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_details.each do |employee_detail| %>
      <tr>
        <td><%= employee_detail.fName %></td>
        <td><%= employee_detail.lName %></td>
        <td><%= employee_detail.email %></td>
        <td><%= employee_detail.role %></td>
        <td><%= employee_detail.experience %></td>
        <td><%= link_to 'Show', employee_detail %></td>
        <td><%= link_to 'Edit', edit_employee_detail_path(employee_detail) %></td>
        <td><%= link_to 'Destroy', employee_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

